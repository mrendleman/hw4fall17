!!!
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    #main
      - if !@current_user
        = button_to 'Sign Up/Log In', login_path, :method => 'get', :id => 'signupLogin'
      - else
        = "You are logged in as " + @current_user.user_id
        = button_to 'Log Out', logout_path, :method => 'delete', :id => 'logout'
      .flashMessage
        - if flash[:notice]
          #notice.message= flash[:notice], :class => 'flashMessage'
        - elsif flash[:warning]
          #warning.message= flash[:warning], :class => 'flashMessage'
    = yield
